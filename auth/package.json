{
  "name": "@app/auth",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --check --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "npm run start:dev",
    "start": "nest start",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "gql:generate-schema": "ts-node --swc src/jobs/generate-schema",
    "gql:generate-client": "graphql-codegen --config codegen.ts",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:report": "eslint \"{src,apps,libs,test}/**/*.ts\" -o eslint_report.json || echo 'errors, but eslint_report.json created'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:e2e": "npx dotenv-cli -y -e .env.test -- jest --config ./test/jest-e2e.json --runInBand",
    "ci:test:report": "npm run ci:test:unit -- --coverage || true # && npm run ci:test:e2e -- --coverage || true",
    "ci:test:unit": "jest --ci --testLocationInResults",
    "ci:test:e2e": "jest --ci --testLocationInResults --config ./test/jest-e2e.json --runInBand",
    "pregql:publish-schema": "npm run gql:generate-schema",
    "gql:publish-schema": "rover subgraph publish freelancenl-devsupergraph@develop --name auth --schema ./schema.gql --routing-url=http://localhost:3002"
  },
  "dependencies": {
    "@nestjs/graphql": "^12.0.11",
    "@ntegral/nestjs-sentry": "^4.0.1",
    "@package/authorization": "*",
    "@package/legacy-authentication": "*",
    "@package/azure-service-bus": "*",
    "@package/general": "*",
    "@package/service": "*",
    "@package/pipeline": "*",
    "@package/m2m": "*",
    "bcryptjs": "^2.4.3",
    "firebase": "^10.0.0",
    "firebase-admin": "^11.9.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.13",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@package/config": "*",
    "@package/types": "*",
    "@types/bcryptjs": "^2.4.5"
  }
}
